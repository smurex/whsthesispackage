\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{whsthesis}[2017/04/18 WHS Thesis]

\RequirePackage[ngerman]{babel}
\RequirePackage{tikz}
\RequirePackage{ifthen}

% set defaults
\def\@background{img/background}
\def\@place{Bocholt}
\def\@dateOfSubmission{\today}

% vars the user can set
\newcommand{\backgroundImage}[1]{\def\@background{#1}}
\newcommand{\place}[1]{\def\@place{#1}}
\newcommand{\dateOfSubmission}[1]{\def\@dateOfSubmission{#1}}

% vars the user has to set
\newcommand{\thesisType}[1]{\def\@thesisType{#1}}
\newcommand{\first}[1]{\def\@first{#1}}
\newcommand{\last}[1]{\def\@last{#1}}
\newcommand{\placeOfBirth}[1]{\def\@placeOfBirth{#1}}
\newcommand{\courseOfStudy}[1]{\def\@courseOfStudy{#1}}
\newcommand{\department}[1]{\def\@department{#1}}
\newcommand{\degree}[1]{\def\@degree{#1}}
\newcommand{\firstExaminer}[1]{\def\@firstExaminer{#1}}
\newcommand{\secondExaminer}[1]{\def\@secondExaminer{#1}}

% set author by @first and @last
\author{\@first\ \@last}

% check if all variables are set
\newcommand{\@checkVar}[2]{
    \ifthenelse{\equal{#2}{}}{
        \PackageError{whsthesis}{value for variable '#1' missing}{}
        \stop
    }{}	
}
\AtBeginDocument{
    \@checkVar{thesisType}{\@thesisType}
    \@checkVar{first}{\@first}
    \@checkVar{last}{\@last}
    \@checkVar{placeOfBirth}{\@placeOfBirth}
    \@checkVar{courseOfStudy}{\@courseOfStudy}
    \@checkVar{department}{\@department}
    \@checkVar{degree}{\@degree}
    \@checkVar{firstExaminer}{\@firstExaminer}
    \@checkVar{secondExaminer}{\@secondExaminer}
}

% single entry on titlepage
\newcommand{\@titlepoint}[2]{
    {
        \footnotesize
        #1
    }

    \textbf{#2}

    \vspace{0.5cm}

    \hrule

    \vspace{0.5cm}
}

% whs background
\newcommand{\whsbackground}{
    \tikz[remember picture,overlay] \node[opacity=1,inner sep=0pt] at (current page.center) {
        \includegraphics[width=\paperwidth,height=\paperheight]{\@background}
    };
}

% whs styled titlepage
\newcommand{\makeWhsThesisTitle}{
    \begin{titlepage}
        \setlength{\parskip}{0em}
        \setlength{\parindent}{0em}

        \whsbackground

        \vspace{2cm}

        {
            \Huge
            \textbf{\@thesisType}
        }

        \vspace{1cm}

        \@titlepoint{Titel der Arbeit // Title of Thesis}{\@title}
        \@titlepoint{Akademischer Abschlussgrad: Grad, Fachrichtung (Abkürzung) // Degree}{\@degree}
        \@titlepoint{Autorenname, Geburtsort // Name, Place of Birth}{\@first\ \@last, \@placeOfBirth}
        \@titlepoint{Studiengang // Course of Study}{\@courseOfStudy}
        \@titlepoint{Fachbereich // Department}{\@department}
        \@titlepoint{Erstprüferin/Erstprüfer // First Examiner}{\@firstExaminer}
        \@titlepoint{Zweitprüferin/Zweitprüfer // Second Examiner}{\@secondExaminer}
        \@titlepoint{Abgabedatum // Date of Submission}{\@dateOfSubmission}
    \end{titlepage}
}

% whs styled statutory declaration
\newcommand{\makeStatutoryDeclaration}{
    {
        \thispagestyle{empty}
        \setlength{\parskip}{.5em}
        \setlength{\parindent}{0em}

        \whsbackground

        \vspace{1cm}

        \section*{Eidesstattliche Versicherung}

        \vspace{1cm}

        \@last, \@first
        \vspace{0.2cm}
        \hrule
        {
            \footnotesize
            Name, Vorname // Name, First Name
        }

        \vspace{1cm}

        Ich versichere hiermit an Eides statt, dass ich die vorliegende Abschlussarbeit mit dem Titel

        \makeatletter
        \textbf{\@title}
        \makeatother

        selbstständig und ohne unzulässige fremde Hilfe erbracht habe. Ich habe keine anderen als die angegebenen Quellen und Hilfsmittel benutzt sowie wörtliche und sinngemäße Zitate kenntlich gemacht. Die Arbeit hat in gleicher oder ähnlicher Form noch keiner Prüfungsbehörde vorgelegen.

        \vspace{3cm}

        \@place, \@date
        \vspace{0.2cm}
        \hrule
        {
            \footnotesize
            Ort, Datum, Unterschrift // Place, Date, Signature
        }
    }
}
